<%= form_for [@lesson, @content]  do |f| %>
  <% if @content.errors.any? %>
    <div class="alert alert-danger">
      <ul>
      <% @content.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :content, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :content, class: 'form-control' %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :content_in_khmer, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :content_in_khmer, class: 'form-control' %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :writing_method_id, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.select :writing_method_id, options_for_select(WritingMethod.all.collect{|m| [m.name,m.id]}, selected: @methodId),  class: 'form-control' %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :image, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.file_field :image %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :audio, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.file_field :audio %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :clue, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.file_field :clue %>
    </div>
  </div>

  <div class="actions form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit %>
    </div>
  </div>
<% end %>
