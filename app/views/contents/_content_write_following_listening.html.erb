<div class="field form-group">
  <%= f.label 'រូបភាពចំលើយ (គួរតែ 250px * 300px)', class: 'col-sm-3 control-label' %>
  <div class="col-sm-9">
    <%= f.file_field :image_answer %>
    <% if @image_answer_url %>
      <%= image_tag @image_answer_url, :id => 'displayImage', :style => 'width: 140px; height: 140px;' %>
    <% end %>
  </div>
</div>

<div class="field form-group">
  <%= f.label 'សំលេង', class: 'col-sm-3 control-label' %>
  <div class="col-sm-9">
    <%= f.file_field :audio %>
    <% if @audio_url %>
      <%= audio_tag @audio_url, controls: true %>
    <% end %>
  </div>
</div>
