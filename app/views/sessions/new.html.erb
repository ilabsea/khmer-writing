<div style="padding:10px; margin:auto; width: 700px; border: 1px solid #ccc">
  <div style="padding-left:15px">
    <h1>ចូលប្រើប្រាស់</h1>
    <div style="color:red">
      <%= notice %></p>
    </div>
  </div>
  <%= form_tag '/login' do %>
    <div class="form-group">
      <label class="col-sm-3 control-label">ឈ្មោះ​អ្នកប្រើប្រាស់</label>
      <div class="col-sm-8">
        <%= text_field_tag :username,'', class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-3 control-label">លេខសំងាត់</label>
      <div class="col-sm-8">
        <%= password_field_tag :password,'', class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-9">
        <%= submit_tag "ចូលប្រើប្រាស់", class: 'btn btn-default' %>
      </div>
    </div>
  <% end %>

</div>
