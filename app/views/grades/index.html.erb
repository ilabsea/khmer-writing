<div class="content">

  <div class="head">
    <h3>តារាងថ្នាក់</h3>
  </div>
  <table class="table table-bordered table-hover">
    <tr>
      <th>ឈ្មោះថ្នាក់</th>
      <th>កូដសំគាល់</th>
      <th colspan="3"></th>
    </tr>

    <% @grades.each do |grade| %>
      <tr>
        <td><%= grade.name %></td>
        <td><%= grade.code %></td>
        <td><%= link_to 'បង្ហាញ', grade_lessons_path(grade) %></td>
        <td><%= link_to 'កែសម្រួល', edit_grade_path(grade) %></td>
      </tr>
      </tr>
    <% end %>
  </table>
</div>
