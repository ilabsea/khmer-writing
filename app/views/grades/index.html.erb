<ul class="nav nav-tabs" role="tablist">
  <li class="active"><%= link_to 'View grade list', grades_path %></li>
  <li><%= link_to 'New grade', new_grade_path %></li>
  <li><%= link_to 'View method list', writing_methods_path %></li>
  <li><%= link_to 'New method', new_writing_method_path %></li>

</ul>

<table class="table table-bordered table-hover">
  <tr>
    <th>Name</th>
    <th>Code</th>
    <th colspan="3"></th>
  </tr>

  <% @grades.each do |grade| %>
    <tr>
      <td><%= grade.name %></td>
      <td><%= grade.code %></td>
      <td><%= link_to 'Show', grade_path(grade) %></td>
      <td><%= link_to 'Edit', edit_grade_path(grade) %></td>
      <td><%= link_to 'Destroy', grade_path(grade),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
    </tr>
  <% end %>
</table>
