<div class="pull-right action">
  <%= link_to 'Edit', edit_grade_path(@grade), class: 'btn btn-primary' %>
  <%= link_to 'Destroy', grade_path(@grade),
          method: :delete,
          data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
</div>



<div class="content">
  <h2>Lessons</h2>
  <div class="pull-right action">
    <%= link_to 'New lesson', new_grade_lesson_path(@grade), class: 'btn btn-primary' %>
  </div>
  <table class="table table-bordered table-hover">
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Khmer Numeric</th>
      <th colspan="3"></th>
    </tr>
    <% @lessons.each do |lesson| %>
      <%= render lesson %>
    <% end %>
  </table>
</div>
