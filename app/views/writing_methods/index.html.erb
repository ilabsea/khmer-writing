<div class="content">
  <h3>តារាងវិធីសាស្រ្ត</h3>
</div>

<table class="table table-bordered table-hover">
  <tr>
    <th>ឈ្មោះវិធីសាស្រ្ត</th>
    <th>រូបតំណាង</th>
    <th colspan="3"></th>
  </tr>

  <% @methods.each do |method| %>
    <tr>
      <td><%= method.name %></td>
      <td><%= method.icon %></td>
      <td><%= link_to 'កែសម្រួល', edit_writing_method_path(method) %></td>
    </tr>
    </tr>
  <% end %>
</table>
