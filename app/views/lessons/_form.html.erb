<%= form_for [@grade, @lesson]  do |f| %>
  <div class="field form-group">
    <%= f.label 'ឈ្មោះមេរៀន', class: 'col-sm-2 control-label' %>
    <div class="col-sm-6">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label 'លេខខ្មែរ', class: 'col-sm-2 control-label' %>
    <div class="col-sm-6">
      <%= f.text_field :khmer_numeric, class: 'form-control' %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label 'លេខរូបភាព', class: 'col-sm-2 control-label' %>
    <div class="col-sm-6">
      <%= f.select :background, options_for_select([["grid", 1], ["table", 2]], selected: 1), {},  {class: 'form-control'} %>
    </div>
  </div>

  <div class="actions form-group">
    <div class="col-sm-offset-2 col-sm-6">
      <%= f.submit 'រក្សាទុក', class: 'btn btn-primary'%>
      <%= f.submit "បោះបង់", :type => "reset", class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
