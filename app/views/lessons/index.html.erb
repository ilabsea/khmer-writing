<div class="content">

  <div class="head">
    <h3>តារាងមេរៀន</h3>
    <div class="pull-right action">
      <%= link_to 'បន្ថែមមេរៀនថ្មី', new_grade_lesson_path(@grade), class: 'btn btn-primary' %>
    </div>
  </div>

  <table class="table table-bordered table-hover">
    <tr>
      <th>ឈ្មោះមេរៀន</th>
      <th>លេខខ្មែរ</th>
      <th>លេខរូបភាព</th>
      <th colspan="3"></th>
    </tr>
    <% @lessons.each do |lesson| %>
      <%= render lesson %>
    <% end %>
  </table>
</div>
